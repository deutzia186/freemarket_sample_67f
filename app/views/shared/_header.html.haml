.header
  .header__box
    .header__box--up
      .logo
        = link_to root_path do
          %img{src:"/logo.png",height:"41px",width:"140px"}
      .search
        = form_tag(searches_path,method: :get) do
          = text_field_tag :search, "", value: @search, placeholder:"何かお探しですか？",class:"search__form"
          = submit_tag '', :name => nil, class:"search__button"
    .header__box--down
      .left
        =link_to "カテゴリー","#",class: "left__category",id: "catbtn"

        =link_to "ブランド","#",class: "left__brand"
      .right
        - if user_signed_in?
          =link_to "マイページ",users_path,class: "right__mypage"

        - else
          =link_to "ログイン",new_user_session_path,class: "right__log-in"
          
          =link_to "新規会員登録",new_user_registration_path,class: "right__sign-up"

          